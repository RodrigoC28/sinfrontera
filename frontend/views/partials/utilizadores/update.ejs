<!--editar utilizador-->
<div class="container my-5">
  <div class="row justify-content-center">
      <div class="col-md-6">
        <h2 class="text-center">Atualizar <% if (user) { user.nome }%></h2>
        <form method="post" action="http://localhost:5000/utilizadores/update">
          <div class="row">
            <input type="hidden" id="id_utilizador" name="id_utilizador" value="<%= utilizador.id_utilizador %>" />
            <div class="mb-3">
              <label for="nome" class="col-sm-2 col-form-label">Nome:</label>
              <div class="col-sm-12">
                <input type="text" class="form-control" id="nome" name="nome" value="<%= utilizador.nome %>" required />
              </div>
            </div>
            <div class="mb-3">
              <label for="sobrenome" class="col-sm-2 col-form-label">Sobrenome:</label>
              <div class="col-sm-12">
                <input type="text" class="form-control" id="sobrenome" name="sobrenome" value="<%= utilizador.sobrenome %>" required />
              </div>
            </div>
            <div class="mb-3">
              <label for="email" class="col-sm-2 col-form-label">Email:</label>
              <div class="col-sm-12">
                <input type="email" class="form-control" id="email" name="email" value="<%= utilizador.email %>" required />
              </div>
            </div>
            <div class="mb-3">
              <label for="password" class="col-sm-2 col-form-label">Password:</label>
              <div class="col-sm-12">
                <input type="password" class="form-control" id="password" name="password" value="<%= utilizador.password %>"
                  required />
              </div>
            </div>
            <div class="mb-3">
              <label for="telemovel" class="col-sm-2 col-form-label">Telem√≥vel:</label>
              <div class="col-sm-12">
                <input type="number" class="form-control" id="telemovel" name="telemovel" value="<%= utilizador.telemovel %>" required />
              </div>
            </div>
            <% if ((user) && user.tipo_utilizador=="admin") { %>
              <div class="mb-3">
                <label for="tipo_utilizador" class="col-sm-2 col-form-label">Tipo de utilizador:</label>
                <div class="col-sm-12">
                  <select class="form-control" id="tipo_utilizador" name="tipo_utilizador" required>
                    <option value="cliente" <%= utilizador.tipo_utilizador === 'cliente' ? 'selected' : '' %>>Cliente</option>
                    <option value="admin" <%= utilizador.tipo_utilizador === 'admin' ? 'selected' : '' %>>Administrador</option>
                  </select>
                </div>
              </div>
            <% } else { %>
            <input type="hidden" id="tipo_utilizador" name="tipo_utilizador" value="<%= utilizador.tipo_utilizador %>" />
            <% } %>
            <br />
            <div class="mb-3">
              <div class="col-sm-6">
                <button type="submit" class="btn custom-btn">Atualizar utilizador</button>&nbsp;
                <button type="reset" class="btn btn-secondary">Limpar</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
</div>