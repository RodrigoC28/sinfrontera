<!--crear as veagnes-->
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center">Criar Autocarro</h2>
      <form class="container" method="post" action="http://localhost:5000/autocarros/create">
        <div class="row">
          <div class="mb-3">
            <label for="id_viagem" class="col-sm-2 col-form-label">Viagem</label>
            <div class="col-sm-10">
              <select class="form-control" id="id_viagem" name="id_viagem" required>
                  <% viagens.forEach((viagem)=> { %>
                      <option value="<%= viagem.id_viagem %>">(<%= viagem.id_viagem %>) <%= viagem.origem %> -> <%= viagem.destino %></option>
                  <% }); %>
              </select>
            </div>
          </div>
          <div class="mb-3">
            <label for="matricula" class="col-sm-2 col-form-label">Matr√≠cula:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="matricula" name="matricula" required />
            </div>
          </div>
          <div class="mb-3">
            <label for="condutor" class="col-sm-2 col-form-label">Nome do Condutor:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="condutor" name="condutor" required />
            </div>
          </div>
          <div class="mb-3">
            <div class="col-sm-6">
              <button type="submit" class="btn custom-btn">Criar autocarro</button>&nbsp;
              <button type="reset" class="btn btn-secondary">Limpar</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>